<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="style.css" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
    <title>Welcome</title>
  </head>
  <body class="px-3">
    <% if (messageSent) { %>
    <div
      class="alert alert-success alert-dismissible fade show w-50 mx-auto"
      role="alert"
    >
      Message sent successfully!
      <button
        type="button"
        class="btn-close"
        data-bs-dismiss="alert"
        aria-label="Close"
      ></button>
    </div>
    <% } %> <% if (errors) { %> <% for (var i = 0; i < errors.length; i++) { %>
    <div
      class="alert alert-danger alert-dismissible fade show w-50 mx-auto"
      role="alert"
    >
      <%= errors[i].msg || 'Something went wrong' %>
      <button
        type="button"
        class="btn-close"
        data-bs-dismiss="alert"
        aria-label="Close"
      ></button>
    </div>
    <% } %> <% } %>
    <form class="col-lg-6 col-md-8 col-12" method="post" action="/message">
      <div class="form-floating mb-3">
        <input
          type="text"
          class="form-control"
          id="name"
          placeholder=""
          name="name"
        />
        <label for="name">Full Name</label>
      </div>
      <div class="form-floating mb-3">
        <input
          type="email"
          class="form-control"
          id="email"
          name="email"
          placeholder="name@example.com"
        />
        <label for="email">Email address</label>
      </div>

      <div class="form-floating mb-3">
        <textarea
          class="form-control"
          placeholder="Leave a comment here"
          id="message"
          name="message"
          style="height: 100px"
        ></textarea>
        <label for="message">Message</label>
      </div>

      <button type="submit" class="btn btn-primary">Submit</button>
    </form>
    <script type="text/javascript">
      // Validate user input
      let nameField = document.getElementById("name");
      let emailField = document.getElementById("email");
      let messageField = document.getElementById("message");
      let form = document.querySelector("form");

      function validateForm() {
        // Reset validation
        nameField.classList.remove("is-invalid");
        emailField.classList.remove("is-invalid");
        messageField.classList.remove("is-invalid");
        let isValid = true;

        if (nameField.value.trim() === "") {
          nameField.classList.add("is-invalid");
          isValid = false;
        }
        if (emailField.value.trim() === "" || !emailField.value.includes("@")) {
          emailField.classList.add("is-invalid");
          isValid = false;
        }
        if (messageField.value.trim() === "") {
          messageField.classList.add("is-invalid");
          isValid = false;
        }
        return isValid;
      }

      function handleSubmit(event) {
        // Prevent form submission
        event.preventDefault();

        // Validate user input
        const validationResult = validateForm();

        if (validationResult) {
          form.submit(); // Submit the form
        }
      }

      form.addEventListener("submit", handleSubmit);
    </script>
  </body>
</html>
